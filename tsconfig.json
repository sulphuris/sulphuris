{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "es2020",
    "lib": ["es2019", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true
  }
}
